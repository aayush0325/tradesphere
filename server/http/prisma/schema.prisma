generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  pageId    Int        @default(autoincrement())
  userId    String     @id
  name      String
  email     String     @unique
  balance   BigInt     @default(10000000) // store upto 2 places of decimals
  portfolio Portfolio?
}

model Portfolio {
  id        String      @id @default(uuid())
  userId    String      @unique
  user      User        @relation(fields: [userId], references: [userId], onDelete: Cascade)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  holdings  Holding[]
}

model Holding {
  id          String    @id @default(uuid())
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])

  symbol      String    // e.g. "BTC", "ETH", "SOL"
  quantity    Decimal   @default(0) // precise balances (better than Float)
  avgBuyPrice Decimal   @default(0) // optional: track cost basis

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([portfolioId, symbol]) // one holding per token per portfolio
}
